generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  sid       String   @unique
  email     String   @unique @db.VarChar(255)
  createdAt DateTime @default(now()) @db.Timestamp(6)
  Audition Audition[]
}


model Audition {
  id      Int      @id @default(autoincrement())
  userId Int    @unique
  User   User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now()) @db.Timestamp(6)
  date      Int
  project   String
  company  String?
  callBackDate Int?
  casting  Json
  notes    String?
  type AuditionType
}

enum AuditionType {
    Television
    Film
    Student
    Theater
    Industrial
    Commercial
    NewMedia
}
